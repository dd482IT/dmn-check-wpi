package de.redsix.dmncheck.feel;

@org.checkerframework.framework.qual.AnnotatedFor("org.checkerframework.checker.regex.RegexChecker")
public enum Operator {

    ADD("+"),
    SUB("-"),
    MUL("*"),
    DIV("/"),
    EXP("**"),
    LT("<"),
    GT(">"),
    LE("<="),
    GE(">="),
    NOT("NOT"),
    OR("or"),
    AND("and");

    private final  String name;

    Operator(final  String name) {
        this.name = name;
    }

    @org.checkerframework.dataflow.qual.Pure
    public  String toString( Operator this) {
        return name;
    }

    @org.checkerframework.dataflow.qual.Pure
    public   boolean isLessThan( Operator this) {
        return this.equals(LT) || this.equals(LE);
    }

    @org.checkerframework.dataflow.qual.Pure
    public   boolean isGreaterThan( Operator this) {
        return this.equals(GT) || this.equals(GE);
    }
}
